{
    "name": "hair-aura/ecommerce",
    "description": "Hair Aura - Premium Wigs & Hair Extensions E-Commerce Platform",
    "type": "project",
    "keywords": ["ecommerce", "wigs", "hair", "ghana", "africa"],
    "homepage": "https://hair-aura.debesties.com",
    "license": "proprietary",
    "authors": [
        {
            "name": "Hair Aura Team",
            "email": "hello@hair-aura.debesties.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-fileinfo": "*",
        "phpmailer/phpmailer": "^6.9",
        "stripe/stripe-php": "^13.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.8",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=PSR12 app/",
        "cs-fix": "phpcbf --standard=PSR12 app/",
        "analyse": "phpstan analyse app/ --level=5"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
